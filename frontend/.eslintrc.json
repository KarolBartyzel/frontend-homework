{
  "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
    "browser": true
  },
  "extends": ["standard", "react-app"],
  "rules": {
      "semi": ["error", "always"],
      "react/jsx-first-prop-new-line": [1, "multiline"],
      "react/jsx-max-props-per-line": ["error", {
        "maximum": 1,
        "when": "multiline"
      }]
  }
}